doctype html
html
    head
        meta(charset="utf-8")
    body
        ul
            li(id="active" class="important current") html
            li css
            li javascript

        script(src="/jwb/jquery-3.2.1.js")

        script.
            //var t = document.getElementById('active');
            // t -> HTMLElement
            // HTMLElement 는 Element 를 상속.
            // element가 따로 있는 이유는, 꼭 html을 위한 건 아니기 때문.
            // xml, svg, xul 등등의 마크업 랭귀지들을 위한것임.

            console.log(document.getElementById('active').tagName);
            // 현재 이 element의 tag 이름이 뭔가 -> 'LI'가 된다.
            // tagName을 바꿨다고 하더라도 바뀌지 않음 -> 읽기 전용이다.

            // Element.id -> id 는 문서에서 단 하나만 있어야 한다.
            //var active = document.getElementById('active');
            //console.log(active.id);
            //active.id = 'deactive';
            //console.log(active.id); // id가 deactive로 바뀐다.

            // Element.className -> Element.classList가 더 낫다.

            var active = document.getElementById('active');
            console.log(active.className);
            active.className += ' read';
            console.log(active.className);
            // className은 사용하기가 불편.

            console.log(active.classList); // -> DOMTokenList
            // DOMTokenList -> class="marked current" 이렇게 두개의 클래스가 있다면
            // 배열처럼 사용 가능하다.
            for (var i = 0; i < active.classList.length; ++i) {
                console.log(active.classList[i]);
            }
            active.classList.add('important'); // -> important를 추가.
            active.classList.remove('important'); // important를 제거.
            active.classList.toggle('important'); // 없으면 넣고 있으면 제거하고.