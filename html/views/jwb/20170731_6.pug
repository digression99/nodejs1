//
    ----- 마우스 이벤트
        click, contextmenu, ...
        contextmenu -> 마우스 오른쪽 클릭.

        키보드 조합 -> event.shiftKey, event.altKey, event.ctrlKey, ...

        마우스 포인터 위치 -> clientX, clientY

    // 마우스 이벤트를 이용한 게임을 만들 수도 있겠다..


html
    head
        style.
            body{
                background-color: black;
                color:white;
            }
            #target{
                width:200px;
                height:200px;
                background-color: green;
                margin:10px;
            }
            table{
                border-collapse: collapse;
                margin:10px;
                float: left;
                width:200px;
            }
            td, th{
                padding:10px;
                border:1px solid gray;
            }
    body
        #target
        table
            tr
                th event type
                th info
            tr
                td click
                td#elmclick
            tr
                td dblclick
                td#elmdblclick
            tr
                td mousedown
                td#elmmousedown
            tr
                td mouseup
                td#elmmouseup
            tr
                td mousemove
                td#elmmousemove
            tr
                td mouseover
                td#elmmouseover
            tr
                td mouseout
                td#elmmouseout
            tr
                td contextmenu
                td#elmcontextmenu
        table
            tr
                th key
                th info
            tr
                td event.altKey
                td#elmaltkey
            tr
                td event.ctrlKey
                td#elmctrlkey
            tr
                td event.shiftKey
                td#elmshiftKey
        table
            tr
                th position
                th info
            tr
                td event.clientX
                td#elemclientx
            tr
                td event.clientY
                td#elemclienty
        script.
            var t = document.getElementById('target');
            function handler(event){
                var info = document.getElementById('elm'+event.type);
                var time = new Date();
                var timestr = time.getMilliseconds();
                info.innerHTML = (timestr);
                if(event.altKey){
                    document.getElementById('elmaltkey').innerHTML = timestr;
                }
                if(event.ctrlKey){
                    document.getElementById('elmctrlkey').innerHTML = timestr;
                }
                if(event.shiftKey){
                    document.getElementById('elmshiftKey').innerHTML = timestr;
                }
                document.getElementById('elemclientx').innerHTML = event.clientX;
                document.getElementById('elemclienty').innerHTML = event.clientY;
            }
            t.addEventListener('click', handler);
            t.addEventListener('dblclick', handler);
            t.addEventListener('mousedown', handler);
            t.addEventListener('mouseup', handler);
            t.addEventListener('mousemove', handler);
            t.addEventListener('mouseover', handler);
            t.addEventListener('mouseout', handler);
            t.addEventListener('contextmenu', handler);
